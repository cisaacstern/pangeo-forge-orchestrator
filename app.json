{
  "name": "Pangeo Forge API",
  "description": "FastAPI / Postgres Backend App",
  "env": {
    "SETUPTOOLS_SCM_PRETEND_VERSION": "9.9.9"
  },
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql:in-dyno"
      ],
      "scripts": {
        "test-setup": "pip install -e '.[dev]' && echo $DATABASE_URL && python -m alembic upgrade head",
        "test": "pytest -vsx tests"
      }
    }
  }
}
